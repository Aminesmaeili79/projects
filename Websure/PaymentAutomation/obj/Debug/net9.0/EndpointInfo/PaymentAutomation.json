{
  "openapi": "3.0.1",
  "info": {
    "title": "PaymentAutomation",
    "version": "1.0"
  },
  "paths": {
    "/api/MerchantSafe/add-card": {
      "post": {
        "tags": [
          "MerchantSafe"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MerchantSafeRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/MerchantSafeRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/MerchantSafeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/MerchantSafe/update-card": {
      "post": {
        "tags": [
          "MerchantSafe"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MerchantSafeRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/MerchantSafeRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/MerchantSafeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/MerchantSafe/cards/{safeKey}": {
      "get": {
        "tags": [
          "MerchantSafe"
        ],
        "parameters": [
          {
            "name": "safeKey",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/MerchantSafe/disable-cards/{safeKey}": {
      "post": {
        "tags": [
          "MerchantSafe"
        ],
        "parameters": [
          {
            "name": "safeKey",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/MerchantSafe/process-payment": {
      "post": {
        "tags": [
          "MerchantSafe"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MerchantSafeRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/MerchantSafeRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/MerchantSafeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CardInfo": {
        "required": [
          "expires",
          "number"
        ],
        "type": "object",
        "properties": {
          "number": {
            "type": "string",
            "nullable": true
          },
          "expires": {
            "type": "string",
            "nullable": true
          },
          "cvv": {
            "type": "string",
            "nullable": true
          },
          "cardOwner": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "MerchantSafeRequest": {
        "required": [
          "safeKey"
        ],
        "type": "object",
        "properties": {
          "safeKey": {
            "type": "string",
            "nullable": true
          },
          "cardInfo": {
            "$ref": "#/components/schemas/CardInfo"
          },
          "amount": {
            "type": "number",
            "format": "double",
            "nullable": true
          },
          "currency": {
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "priority": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "accountClosureDay": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}