@model WebApplication1.Models.MerchantSafeRequestViewModel
@{
    ViewData["Title"] = "Add Card";
}

<h1>Add Card</h1>

<form asp-action="AddCard" method="post">
    <div>
        <label>Safe Key</label>
        <input asp-for="SafeKey" />
    </div>
    <div>
        <label>Card Number</label>
        <input asp-for="CardInfo.Number" />
    </div>
    <div>
        <label>Expires</label>
        <input asp-for="CardInfo.Expires" />
    </div>
    <div>
        <label>CVV</label>
        <input asp-for="CardInfo.Cvv" />
    </div>
    <div>
        <label>Card Owner</label>
        <input asp-for="CardInfo.CardOwner" />
    </div>
    <button type="submit">Add Card</button>
</form>